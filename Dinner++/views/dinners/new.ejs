<%- include('../partials/header') %>

<container id="dinner-section">
    <div>
        <h1>Create a dinner date!</h1>
    </div>
    <div>
        <form id="create-dinner-form" action="/dinners" method="POST">
            <label>What is the name of the event?</label>
            <input type="text" name="eventName">
            <label>When is the event held?</label>
            <input type="date" name="eventDate">
            <label>Who is hosting?</label>
            <input type="text" name="eventHost">
            <label>Where is the event located?</label>
            <input type="text" name="eventLocation">
            <label>Food to bring</label>
            <input type="text" name="$$$$$">
            <button type='submit'>Create</button>
        </form>
    </div>
</container>

