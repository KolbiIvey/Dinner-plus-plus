<%- include('../partials/header') %>

<h4><%= food.foodName %></h4>
<h4><%= food.foodAllergen %></h4>

<form id="edit-foods-form" action="/dinners/<%= dinner.id %>/foods/<%= food.id %>?_method=PUT" method="POST">
  <label>Food</label>
  <input type="text" name="foodName">
  <label>Allergens<label>
  <select name="foodAllergen">
    <option>--</option>
    <option value="DF">Dairy Free</option>
    <option value="VG">Vegetarian</option>
    <option value="VE">Vegan</option>
    <option value="NF">Nut Free</option>
  </select>
  <input type="submit" value="Edit Food">
</form>

<%- include('../partials/footer') %>